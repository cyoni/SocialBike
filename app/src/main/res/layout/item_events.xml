<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:elevation="3dp"
            android:src="@drawable/profile_blank"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="25dp" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/profile_image"
            android:text="Yoni"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/locationName"
            android:layout_marginTop="5dp"
            android:minHeight="200dp"
            android:text="This Sunday the best bibke ride is happening. The event cost 10 shekels and everyone is welcome."
            android:textSize="20sp" />


        <TextView
            android:id="@+id/people_going"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:text="12 people going"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:text="Sunday, 25th May"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/locationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:text="Tel Aviv"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/date"
            android:text="10:00"
            android:textSize="20sp" />


        <Button
            android:id="@+id/coming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message"
            android:text="Mark as Going" />


        <Button
            android:id="@+id/interested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message"
            android:layout_toRightOf="@id/coming"
            android:text="Mark as Interested" />

        <Button
            android:id="@+id/who_is_coming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/coming"
            android:text="Going" />


        <Button
            android:id="@+id/who_is_interested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/coming"
            android:layout_toRightOf="@id/who_is_coming"
            android:text="Interested" />

        <Button
            android:id="@+id/commentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/coming"
            android:layout_toRightOf="@id/who_is_interested"
            android:text="Comment" />

        <Button
            android:id="@+id/mapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/coming"
            android:layout_toRightOf="@id/commentButton"
            android:text="Map" />


        <RelativeLayout
            android:id="@+id/newCommentEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mapButton">

            <EditText
                android:id="@+id/headCommentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toStartOf="@id/postCommentButton"
                android:ems="10"
                android:hint="Type your comment..."
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/postCommentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:text="Send" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/headCommentText"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/commentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newCommentEvent"
            android:orientation="vertical"
            android:visibility="gone"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>