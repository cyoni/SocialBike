<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PostActivity">

        <ProgressBar

            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_centerInParent="true"
            android:layout_below="@id/post_buttons"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is some post....................."
            android:textSize="40sp" />

        <TextView
            android:id="@+id/commentsCounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post"
            android:layout_marginLeft="5dp"
            android:text="Loading"
            android:textSize="20sp"
            android:textStyle="bold" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/post_buttons"
            android:scrollbars="vertical"
            android:visibility="invisible"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />

        <EditText
            android:id="@+id/newComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/commentsCounter"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <Button
            android:id="@+id/sendComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/commentsCounter"
            android:text="Send" />

        <include
            android:id="@+id/post_buttons"
            layout="@layout/post_buttons"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_below="@id/newComment" />

    </RelativeLayout>


</androidx.core.widget.NestedScrollView>


